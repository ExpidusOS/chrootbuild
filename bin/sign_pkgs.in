#!/bin/bash

LIBDIR='/usr/lib/manjaro-arm-chrootbuild'

. ${LIBDIR}/util-pkg.sh

for f in $(find $PWD -maxdepth 1 -regex '.*\.pkg\.tar\.\(xz\|zst\)'); do
    msg2 "Signing ${f##*/} with key ${GPGKEY}"
    [[ -e "$f".sig ]] && rm "$f".sig
    gpg --detach-sign --use-agent -u "${GPGKEY}" "$f"
done
msg3 "Done."
